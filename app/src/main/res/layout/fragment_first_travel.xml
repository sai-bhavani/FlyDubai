<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="avaitors.flysky.FirstTravelActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/this_is_a_test_title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/section_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/this_is_test_description"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/section_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/section_desc"
        android:layout_below="@id/section_label"
        android:scaleType="center"
        tools:ignore="ContentDescription" />

</RelativeLayout>
